@model AppUser

<div class="row mb-2">
    <div class="col-md-8">
        @foreach (var item in Model.Articles)
{
    <div class="col-12  d-flex align-items-stretch flex-column mb-4">
              <div class="card bg-light d-flex flex-fill">
                
                <div class="card-body pt-0">
                  <div class="row">
                    <div class="col-md-10">
                      <h2 class="lead"><b>@item.Title</b></h2>
                      <p class="text-muted text-sm">@item.Content</p>
                      <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li><a asp-action="Detail" asp-route-id="@item.ID">Devamını okumak için tıklayınız...</a></li>
                      </ul>
                    </div>
                    <div class="col-md-6 text-center">
                      <img src="@item.Image" alt="user-avatar" class="img-circle img-fluid">
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <div class="text-right">
                    <a href="#" class="btn btn-sm bg-teal">
                      <i class="fas fa-comments"></i> Oluşturma Tarihi: @item.CreateDate
                    </a>
                    <a asp-action="Detail" asp-controller="User" asp-route-id="@item.AppUserID" class="btn btn-sm btn-primary">
                      <i class="fas fa-user"></i> @item.AppUser.FullName
                    </a>
                  </div>
                </div>
              </div>
            </div>
            }
    </div>
 <div class="col-md-4" >
        <p>Takip Ettiğim Kategoriler</p>
        @foreach (var item in Model.UserFollowedCategories)
        {
            <a asp-action="Filter" asp-controller="Article" asp-route-id="@item.CategoryID" class="btn btn-primary">@item.Category.Name</a>
        }
    </div>

</div>