
@model ArticleCreateDTO

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">MAKALE OLUŞTURMA PANELİ</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Create" method="post" enctype="multipart/form-data">
       @* createtten sonrakini yazmamdaki neden içinde file kullanacağım için*@
        <div class="card-body">
            <div class="" asp-validation-summary="All">

            </div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" type="text" class="form-control">

            </div>
            <div class="form-group">
                <label asp-for="Content">Content</label>
                <input asp-for="Content" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ImagePath">ImagePath</label>
                <input asp-for="ImagePath" type="file" class="form-control">
            </div>
            <input asp-for="AppUserID" type="hidden"/>
            <div class="form-group">
                <label asp-for="CategoriesID">Kategoriler</label>
                <br />
              
                    @foreach (var item in Model.Categories)
                    {
                         <input type="checkbox" class="btn-check" name="CategoriesID[]" value="@item.ID" id="@item.ID" autocomplete="off">
                            <label class="btn btn-outline-primary" for="@item.ID">@item.Name</label>
                    }
               
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">OLUŞTUR</button>
            @*bundan sonra yani bu tetiklenince bizi posta yönlendirecek*@
        </div>
    </form>
</div>